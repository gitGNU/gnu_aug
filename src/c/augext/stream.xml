<package name="aug" dir="augext">

  <quotincl>augtypes.h</quotincl>

  <verbatim>
struct iovec;
  </verbatim>

  <interface name="stream">

    <method name="shutdown" type="aug_result" throws="true" qname="shutdown"/>

    <method name="read" type="aug_rsize" throws="true" qname="read">
      <param name="buf" type="void*"/>
      <param name="size" type="size_t"/>
    </method>

    <method name="readv" type="aug_rsize" throws="true" qname="readv">
      <param name="iov" type="const struct iovec*"/>
      <param name="size" type="int"/>
    </method>

    <method name="write" type="aug_rsize" throws="true" qname="write">
      <param name="buf" type="const void*"/>
      <param name="size" type="size_t"/>
    </method>

    <method name="writev" type="aug_rsize" throws="true" qname="writev">
      <param name="iov" type="const struct iovec*"/>
      <param name="size" type="int"/>
    </method>

  </interface>

</package>
